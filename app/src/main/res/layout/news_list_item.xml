<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_s_spacing"
    android:paddingRight="@dimen/common_s_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/l_text_size" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitStart"
            android:id="@+id/news_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_item_image_height"
            android:layout_gravity="center"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_item_source"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/darker_gray"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"
        android:background="@drawable/s_divider" />
</LinearLayout>